<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to right bottom, #F7F7F7, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.SaveLoadDialogController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Enter File Name">
      <font>
         <Font name="Arial Bold" size="20.0" />
      </font></Label>

    <TextField fx:id="fileNameInput" prefWidth="250" promptText="Enter file name..." />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onSave" style="-fx-background-color: FFB22C;" text="Save">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font></Button>
        <Button onAction="#onCancel" style="-fx-background-color: FFB22C;" text="Cancel">
         <font>
            <Font name="Arial Bold" size="15.0" />
         </font></Button>
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
